<% provide(:title, 'Home') %>

<div class="hero-unit">
  <div class = "container center">
    <h1>Welcome to the League of Teemo!</h1>

    <%= form_tag("/search", method: "get") do %>
        <%= text_field_tag :summoner, params[:summoner], :placeholder => "Enter a summoner here." %>
        <div class>
          <%= submit_tag("Let's Teemo!", :name => nil, :class => 'btn btn-info') %>
        </div>
    <% end %>
    <p>
      Implementing features soon!
    </p>
  </div>
</div>
